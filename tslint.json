{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      false,
      "single"
    ],
    "indent": [
      true,
      "tabs",
      2
    ],
    "max-line-length": false,
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "member-access": false,
    "no-console": false,
    "trailing-comma": false
  }
}